#include <SFML/Graphics.hpp>

int main() {
    int n = 10; 
    int windowSize = 500;
    float cellSize = windowSize / float(n);

    sf::RenderWindow window(sf::VideoMode(windowSize, windowSize), "stolbiki");
    window.clear(sf::Color::White);

    sf::RectangleShape line;
    line.setFillColor(sf::Color::Black);

    for (int i = 0; i <= n; i++) {
        line.setSize(sf::Vector2f(1, windowSize));
        line.setPosition(i * cellSize, 0);
        window.draw(line);
    }

    for (int j = 0; j <= n; j++) {
        line.setSize(sf::Vector2f(windowSize, 1));
        line.setPosition(0, j * cellSize);
        window.draw(line);
    }

    sf::RectangleShape rect;
    rect.setFillColor(sf::Color::Green);


    for (int i = 0; i < n; i++) {   
        for (int j = 0; j < n; j++) {   
            
            if ((i == 1 && j == 9) ||    
                (i == 3 && j >= 7) ||          
                (i == 5 && j >= 5) ||         
                (i == 7 && j >= 3) ||         
                (i == 9 && j >= 1))            
            {
                rect.setSize(sf::Vector2f(cellSize - 2, cellSize - 2));
                rect.setPosition(i * cellSize + 1, j * cellSize + 1);
                window.draw(rect);

               
            }
        }
    }

    window.display();

    while (window.isOpen()) {
        sf::Event event;
        while (window.pollEvent(event)) {
            if (event.type == sf::Event::Closed)
                window.close();
        }
    }

    return 0;
}
